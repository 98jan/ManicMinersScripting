{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Manic Miners level",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"name": "section.manicminerslevel",
			"patterns": [{
				"name": "keyword.sectionname",
				"match": "\\b(comments|info|tiles|height|resource|objectives|buildings|landslidefrequency|lavaspread|miners|briefing|briefingsuccess|briefingfailure|vehicles|script|creatures)\\b"
			}, {
				"name": "sectionbody",
				"begin": "\\{",
				"end": "\\}"
			}]
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.manicminerslevel",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.manicminerslevel",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.manicminerslevel",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.manicminerslevel"
}